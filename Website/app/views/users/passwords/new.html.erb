<div class="ingraved dialog box">
	<h1 class="title"><%= t "forgot.title" %></h1>

	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		<% if any_errors?(resource) %>
			<div class="notice">
				<%= pretty_error(resource) %>
			</div>
		<% end %>

		<div>
			<%= f.label :email, t("dialog.email") %>
			<%= f.email_field :email, :placeholder => t("dialog.email_placeholder"),
				:class => "field", :autofocus => true, :onkeydown => "return submitIfEnter(this,event);" %>
		</div>

		<div class="bottom">
			<div class="throw-left">
				<%= render :partial => "devise/shared/links" %>
			</div>
			<div class="throw-right">
				<%=button_tag t("forgot.link"), nil, "question", { :type => :form, :color => :gold } %>
			</div>
			<div class="clear"></div>
		</div>
	<% end %>
</div>