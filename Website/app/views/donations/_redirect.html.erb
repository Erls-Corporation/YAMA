<%= form_tag @url, :id => "paypal_form" do |f| %>
	<%= hidden_field_tag "cmd", @cmd %>
	<%= hidden_field_tag "return", @return %>
	<%= hidden_field_tag "cancel_return", @cancel_return %>
	<%= hidden_field_tag "notify_url", @notify_url %>
	<%= hidden_field_tag "no_shipping", @no_shipping %>
	<%= hidden_field_tag "rm", @rm %>
	<%= hidden_field_tag "cbt", @cbt %>
	<%= hidden_field_tag "cn", @cn %>
	<%= hidden_field_tag "bn", @bn %>
	<%= hidden_field_tag "custom", @custom %>
	<%= hidden_field_tag "item_number", @item_number %>
	<%= hidden_field_tag "item_name", @item_name %>
	<%= hidden_field_tag "business", @business %>
	<%= hidden_field_tag "amount", @amount %>
	<%= hidden_field_tag "currency_code", @currency_code %>
<% end %>
<script>
	document.getElementById('paypal_form').submit();
</script>