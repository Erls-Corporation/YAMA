<h1>Editing source</h1>

<%= form_for(@source) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :configuration_id %><br />
	<%= f.select :configuration_id, current_user.configurations.all.collect { |c| [ c.name, c.id ] } %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :data %><br />
    <%= f.text_field :data %>
  </p>
  <p>
    <%= f.label :include %><br />
    <%= f.check_box :include %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @source %> |
<%= link_to 'Back', sources_path %>