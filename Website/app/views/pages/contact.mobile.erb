<% if params[:sent] && params[:sent] == "success" %>	<div class="notice"><%=t "contact.email.sent" %></div><% end %><h1><%=t "contact.email.title" %></h1><%= form_tag mail_path do %>	<% if flash[:error] %>		<div class="error"><%= flash[:error] %></div>	<% end %>	<%= text_field_tag :name, params[:name], :class => "field", :placeholder => t("contact.email.name") %>	<%= email_field_tag :email, params[:email], :class => "field", :placeholder => t("contact.email.email") %>	<%= text_field_tag :subject, params[:subject], :class => "field", :placeholder => t("contact.email.subject") %>	<%= text_area_tag :message, params[:message], :class => "field", :rows => 10,		:placeholder => t("contact.email.message") %>	<div class="center" id="recaptcha">		<center>			<%= recaptcha_tags :ssl => true, :display => { :theme => "white", :lang => I18n.locale,				:custom_translations =>				{					:instructions_visual => t("recaptcha.instructions_visual"),					:instructions_audio  => t("recaptcha.instructions_audio"),					:play_again          => t("recaptcha.play_again"),					:cant_hear_this      => t("recaptcha.cant_hear_this"),					:visual_challenge    => t("recaptcha.visual_challenge"),					:audio_challenge     => t("recaptcha.audio_challenge"),					:refresh_btn         => t("recaptcha.refresh_btn"),					:help_btn            => t("recaptcha.help_btn")				} }			%>		</center>	</div>	<%= button_tag t("contact.email.send"), "", "", { :type => :form, :color => :blue } %><% end %><p>&nbsp;</p><h1><%=t "contact.visit.title" %></h1><p>	Dj√§knegatan 81<br/>	754 25 Uppsala<br/>	<%=t "contact.visit.sweden" %></p><h1><%=t "contact.phone.title" %></h1><p>	<%= I18n.locale.to_s == "se" ? "0":"+46 (0) " %>76 1337 235</p>