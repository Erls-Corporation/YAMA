<div class="white box" id="tour">
	<h1 id="title">&nbsp;</h1>
	<div class="handle prev" onclick="prevSlide();"><</div>
	<div class="view">
		<div id="image-wrap">
			<%= image_tag "#{I18n.locale}/tour/youtube.png", :id => "image", :style => "display:none;" %>
		</div>
	</div>
	<div class="handle next" onclick="nextSlide();">></div>
	<div id="text-wrap"><div id="text">
		<p>&nbsp;</p>
		<p>&nbsp;</p>
	</div></div>
</div>

<% if image_ads? %>
	<div class="center">
		<div class="ingraved leader box ad">
			<% if true or Rails.env == "production" %>
				<script type="text/javascript"><!--
				google_ad_client = "ca-pub-5639501338860736";
				/* Leader Images */
				google_ad_slot = "0353186432";
				google_ad_width = 728;
				google_ad_height = 90;
				//--><!--
				</script>
				<script type="text/javascript"
				src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
				</script>
			<% else %>
				<div style="height: 90px;"></div>
			<% end %>
		</div>
	</div>
<% end %>

<script>
	var images = [];
	for (s in tourSlides)
		images.push('/assets/' + locale + '/tour/' + tourSlides[s] + '.png');
	preloadImages(images);

	jQuery.fx.interval = 1;
	window.onload = function() { updateSlide(false); };
</script>