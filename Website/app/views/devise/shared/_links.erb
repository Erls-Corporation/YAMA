<div class="devise-links">
	<%- if controller_name != 'sessions' %>
	  <%= link_to t("login.link"), login_path, :class => "devise-link" %>
	<% end -%>

	<%- if devise_mapping.registerable? && controller_name != "registrations" %>
	  <%= link_to t("join.link"), join_path, :class => "devise-link" %>
	<% end -%>

	<%- if devise_mapping.recoverable? && controller_name != "passwords" %>
	  <%= link_to t("forgot.link"), forgot_path, :class => "devise-link" %>
	<% end -%>

	<%- if devise_mapping.confirmable? && controller_name != "confirmations" %>
	  <%= link_to "confirm", new_confirmation_path(resource_name), :class => "devise-link" %><br />
	<% end -%>

	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
	  <%= link_to t("unlock.link"), unlock_path, :class => "devise-link" %><br />
	<% end -%>

	<%- if devise_mapping.omniauthable? %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
		<%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "devise-link" %><br />
	  <% end -%>
	<% end -%>
</div>