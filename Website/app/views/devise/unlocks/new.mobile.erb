<%= form_for(resource, :as => resource_name, :url => user_unlock_path, :html => { :method => :post }) do |f| %>
	<% if any_errors?(resource) %>
		<div class="notice">
			<%= pretty_error(resource) %>
		</div>
	<% end %>

	<%= f.email_field :email, :class => "field", :placeholder => t("dialog.email_placeholder") %>
	
	<%=button_tag t("unlock.link"), nil, "unlock", { :type => :form, :color => :gold } %>
	
	<%= render :partial => "devise/shared/links" %>
<% end %>